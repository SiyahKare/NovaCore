# Cloudflare Tunnel Configuration
# Bu dosyayı ~/.cloudflared/config.yml olarak kopyalayın

tunnel: YOUR_TUNNEL_ID
credentials-file: /home/user/.cloudflared/YOUR_TUNNEL_ID.json

ingress:
  # Backend API - NovaCore Backend
  - hostname: api.siyahkare.com
    service: http://localhost:8000
  
  # Frontend Portal - Citizen Portal
  - hostname: portal.siyahkare.com
    service: http://localhost:3000
  
  # Catch-all (404) - Tüm diğer istekler için
  - service: http_status:404

